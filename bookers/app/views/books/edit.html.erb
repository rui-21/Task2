<h2>Editing book</h2>
<%= form_with model:@book, local:true do |f| %>
<div class="field">
  <label>Title</label>
  <%= f.text_field :title %>
</div>
<div class="field">
  <label>Body</label>
  <%= f.text_area :body %>
</div>
 <%= f.submit 'Update Book' %>
<% end %>
<%= link_to "Show", book_path(@book) %>
